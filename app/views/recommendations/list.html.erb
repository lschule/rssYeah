<h1>Listing recommendations</h1>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Article</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recommendations.each do |recommendation| %>
  <tr>
    <td><%= recommendation.from_id %></td>
    <td><%= recommendation.to_id %></td>
    <td><%= recommendation.article_id %></td>
    <td><%= recommendation.message %></td>
    <td><%= link_to 'Show', recommendation %></td>
    <td><%= link_to 'Edit', edit_recommendation_path(recommendation) %></td>
    <td><%= link_to 'Destroy', recommendation, confirm: 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

