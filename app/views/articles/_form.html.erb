<%= form_for @article, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Article</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :summary, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :summary, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :url, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :url, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :published, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :published, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :guid, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :guid, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', articles_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
