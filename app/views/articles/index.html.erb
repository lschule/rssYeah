<div id="article-top-box" class="well">
	<a href="feeds" class="btn btn-primary pull-right"><i class='icon-plus'></i>&nbsp;<b>Add feeds</b></a>
	<%= form_tag articles_path, method: :get do %>
	  <p>
	    <%= text_field_tag :query, params[:query] %>
	    <%= submit_tag "Search", name: nil %>
	  </p>
	<% end %>
</div>

<% unless @articles.length == 0 %>
	<div id="facets">
	  <h3>Feeds (Faceted Search)</h3>
	  <ul>
	    <% @articles.facets['feeds']['terms'].each do |facet| %>
	      <li>
	        <%= link_to_unless_current Feed.find(facet['term']).name, params.merge(feed_id: facet['term']) %>
	        <% if params[:feed_id] == facet['term'].to_s %>
	          (<%= link_to "remove", feed_id: nil %>)
	        <% else %>
	          (<%= facet['count'] %>)
	        <% end %>
	      </li>
	    <% end %>
	  </ul>
	</div>
	<div class="article-container">
    <% @articles.each do |article| %>			
      <div class="article <%= is_read(article.id,current_user.id) %>" data-article-id="<%= article.id  %>">	
		<div class="article-header" id="<%= article.id %>_header" >
       		<div class="article-actions">
				<a><i id="heart_<%= article.id %>" class="<%= is_hearted(article.id,current_user.id) %> heart"></i></a>
				<a id="mail_<%= article.id %>" class="mail" href="mailto:?subject=FYI: <%= article.name %>&amp;body=
					Hello,%0D%0A
					I think you would be interested by this article:%0D%0A
					%0D%0A
					<%= article.name %>%0D%0A
					<%= article.feed_name %> -- <%= article.published.try(:strftime,'%d %b %Y') %>%0D%0A
					<%= article.url %>%0D%0A
					%0D%0A
					I found it using RSSYeah%0D%0A
					Have a nice day
					" target="_blank">
				<i class="icon-envelope"></i></a>
			</div>
			<h3 id="title_<%= article.id %>" class="article-title" data-toggle="collapse" data-target="#<%= article.id %>">
				<%= article.name %><small class="pull-right"><%= article.published.try(:strftime,'%d %b %Y') %></small>
			</h3>
			<h5>
				<%= article.feed_short %>
				<% unless article.author.nil?  %>	
					, by <%= article.author %>
				<% end %>	
			</h5>
		</div>
		<div class="collapse article-content" id="<%= article.id %>">
			<div class="article-summary">
				<%= raw article.summary  %>
			</div>
			<a href="<%= article.url %>" class="btn btn-primary go-to-article" target="_blank"><i class='icon-arrow-right'></i>&nbsp;<b>Go to Article</b></a>
			<div style="height:14px">&nbsp;</div>
		</div>
	  </div>
	<% end %>
	</div>
	 <%= paginate @articles %>
<% else %>
<i class='icon-exclamation-sign pull-left' style="font-size:46px;"></i>
<h2 style="line-height:34px;padding-left:40px">Seems like you haven't added any feeds yet. Add feeds and enjoy the read!</h2>

<% end %>
