<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
	<div class="alert alert-block">
	  <a class="close" data-dismiss="alert">Ã—</a>
	  <h4 class="alert-heading">Oooops</h4>
	  <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
	</div>
<% end %>


  <div class="control-group">
    <%= f.text_field :username, :placeholder => "Username", :class => "span3 bottom-10px" %>
  </div>
  <div class="control-group">
    <%= f.text_field :email, :placeholder => "Email", :class => "span3 bottom-10px" %>
  </div>
  <div class="control-group">
    <%= f.password_field :password, :placeholder => "Password", :class => "span3 bottom-10px" %>
  </div>
  <div class="control-group">
      <%= f.password_field :password_confirmation, :placeholder => "Confirm your password", :class => "span3 bottom-10px" %>
    </div>
  <div class="actions">
    <%= f.submit 'Sign up', :class => 'btn btn-primary btn-large' %>
  </div>
<% end %>