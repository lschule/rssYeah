
<%= form_for(@feed, :html => { :class => "form-horizontal"}) do |f| %>
  <% if @feed.errors.any? %>
    <div class="alert alert-block">
	  <a class="close" data-dismiss="alert">Ã—</a>
	  <h4 class="alert-heading">Oooops</h4>
	  <% @feed.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
	</div>
  <% end %>

<div class="control-group">
<%= f.text_field :name, :placeholder => "Feed name", :class => "span3 bottom-10px", :required => true %>
</div>
  <div class="control-group">
<%= f.text_field :shortname, :placeholder => "Feed shortname", :class => "span3 bottom-10px", :required => true %>
</div>
  <div class="control-group">
<%= f.url_field :url, :placeholder => "Feed Url", :class => "span3 bottom-10px", :required => true   %>
</div>
  <div class="control-group">
</div>
<%= f.submit "Add this feed to the list", :class => 'btn btn-primary btn-large' %>

<% end %>
